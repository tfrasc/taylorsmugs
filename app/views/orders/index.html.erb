<p style="padding-top:45px" id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><img src='<%= order.photo(:thumb) %>'</td>
        <td><%= order['id'] %></td>
        <td><%= order['name'] %></td>
        <td><%= order['phone'] %></td>
        <td><%= order['email'] %></td>
        <td><%= order['message'] %></td>
        <td><%= order['paid'] %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

